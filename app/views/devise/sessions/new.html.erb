


<div class="container mt-5 padding-top: 60px">
    <div class="row">
        <div class="col-xl-4 "></div>
        <div class="col-xl-4 ">
            <div class="card border-secondary" style="width: 23rem;">
              <div class="card-body">
                <section class="form-auth text-center">
                 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <h1 class="h3 mb-3 font-weight-normal">FORM LOG IN</h1> 
                    
                    <p><%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "email address", autocomplete: "current-password" %></p>
                    <p><%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control", id:"inputPassword" %></p>

                    <div class="checkbox mb-3">
                      <label>
                        <input type="checkbox" value="remember-me"> Remember me
                      </label>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Log in</button>
                 <% end %>
                <%= render "devise/shared/links" %>
            </section>
              </div>
            </div>
            
        </div>
        <div class="col-xl-4"></div>
    </div>
</div>

